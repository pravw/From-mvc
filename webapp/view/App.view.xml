<mvc:View
    controllerName="project1.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
>
    <App id="app">
        <Page id="idPage">
            <content>

      
      
        <t:Table   id="idTab" rows ="{ola>/empTab}"     selectionMode="Single"   rowSelectionChange="onSelect"                      >
       

    

        
      
      <t:columns>

       <t:Column  id="idClm" >
       <t:label>
       <Label id="idLb1" text = "Emp No" ></Label>
       </t:label>
       <t:template>
      <Text   id="idTx1" text="{ola>empNo}"></Text>
       </t:template>
       </t:Column>


              <t:Column  id="idClm1">
       <t:label>
       <Label  id="idLb2" text = "Emp Name" ></Label>
       </t:label>
       <t:template>
      <Text  id="idTx2" text="{ola>eName}"></Text>
       </t:template>
       </t:Column>       <t:Column id="idClm2">
       <t:label>
       <Label  id="idLb3" text = "Emp Salary" ></Label>
       </t:label>
       <t:template>
      <Text    id="idTx3" text="{ola>salary}"></Text>
       </t:template>
       </t:Column>       
       <t:Column id="idClm3" >
       <t:label>
       <Label   id="idLb4" text = "Currency" ></Label>
       </t:label>
       <t:template>
      <Text   id="idTx4" text="{ola>currency}"></Text>
       </t:template>
       </t:Column>


 
      </t:columns>  
      </t:Table>




                <f:SimpleForm id="idSim">
                <f:content>
                <Label id="idLbl1" text ="Emp Id"></Label>
                    <Input
                        id="idIn"
                        value="{/empStr/empNo}"
                        enabled="{/empStr/alia}"
                    />
                    <Label id="idLbl2" text ="Emp Name"></Label>
                       <Input
                        id="idIn2"
                        value="{/empStr/eName}"
                     
                    />
                      <Label id="idLbl3" text ="Emp Salary"></Label>
                       <Input
                        id="idIn3"
                        value="{=${/empStr/eName} ==='krish'? 66666 : ${/empStr/salary}}"
                        
                        enabled="{=${/empStr/eName} ==='krish'? false : true}"
                     
                    />

                       <Label id="idLbl4" text ="Currency"></Label>
                       <Input
                        id="idIn4"
                        value="{/empStr/currency}"
                     
                    />
                    </f:content>
                </f:SimpleForm>
                <Button
                    id="idBu"
                    press="giveMe"
                    text="pressMe"
                />
                <!-- <Button id="idBu1" press="showSomePower" text="Attach Function" ></Button> -->
                <Switch
                    id="idSW"
                    change="onSwtChange"
                />
            </content>
        </Page>
    </App>
</mvc:View>
